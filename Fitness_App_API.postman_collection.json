        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Send OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"mobileNumber\": \"+911234567890\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/send-otp",
                            "host": [
